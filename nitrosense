#!/bin/bash

if [ $# -le 0 ]; then
	echo "PWR:  [q]uiet [d]efault [p]erformance"
	echo "FAN:  [a]uto  [c]ustom  [m]ax"
	echo "DBG: e[x]tract ec"
	exit
fi

if [[ "$(lsmod | grep ec_sys | wc -c)" -gt 0 && ! -f /tmp/.mod-ec_sys-init ]]; then
	sudo rmmod ec_sys
	if ! sudo insmod ~/ec_sys.ko write_support=1; then
		sudo dmesg | tail
		exit
	else
		echo 1 > /tmp/.mod-ec_sys-init
	fi
else
	echo "Custom ec_sys loaded as /tmp/.mod-ec_sys-init exists"
fi

if [[ "$(lsmod | grep uvcvideo | wc -c)" -gt 0 && ! -f /tmp/.mod-uvcvideo-init ]]; then
	sudo rmmod uvcvideo
	if ! sudo insmod ~/uvcvideo.ko; then
		sudo dmesg | tail
		exit
	else
		echo 1 > /tmp/.mod-uvcvideo-init
	fi
else
	echo "Custom uvcvideo loaded as /tmp/.mod-uvcvideo-init exists"
fi


EC=/sys/kernel/debug/ec/ec0/io

function ecw() {
	# shellcheck disable=SC2059
    printf "$2" | sudo dd of=$EC bs=1 seek="$1" count=1 conv=notrunc &> /dev/null
}

ecw $((0x03)) '\x11' # Write-Enable

if [[ $(sudo ls $EC 2>/dev/null) ]]; then
	if [[ $* =~ "q" ]]; then
		echo "PWR - Quiet"
		ecw $((0x2c)) '\x00' # 00 01 04 PWR: quiet default perf
		ecw $((0x2d)) '\x04' # 04 05 PWR
		sudo systemctl restart nvidia-powerd
	fi
	if [[ $* =~ "d" ]]; then
		echo "PWR - Default"
		ecw $((0x2c)) '\x01' # 00 01 04 PWR: quiet default perf
		ecw $((0x2d)) '\x04' # 04 05 PWR
		sudo systemctl restart nvidia-powerd
	fi
	if [[ $* =~ "p" ]]; then
		echo "PWR - Performance"
		ecw $((0x2c)) '\x04' # 00 01 04 PWR: quiet default perf
		ecw $((0x2d)) '\x04' # 04 05 PWR
		sudo systemctl restart nvidia-powerd
	fi
	if [[ $* =~ "a" ]]; then
		echo "FAN - Auto"
		ecw $((0x21)) '\x10' # 10 20 30 GPUF: auto max cust
		ecw $((0x22)) '\x04' # 04 08 0c CPUF: auto max cust
	fi
	if [[ $* =~ "c" ]]; then
		if [ -z "$2" ]; then
			echo "Specify FAN Percentage as Second Arg"
		else
			PCT="\x$(printf %x "$2")"
			echo "FAN - Custom ($2%)"
			ecw $((0x21)) '\x30' # 10 20 30 GPUF: auto max cust
			ecw $((0x22)) '\x0c' # 04 08 0c CPUF: auto max cust
			ecw $((0x37)) "$PCT" # 32 64 CPUF PCT: 0-100%
			ecw $((0x3a)) "$PCT" # 32 64 GPUF PCT: 0-100%
		fi
	fi
	if [[ $* =~ "m" ]]; then
		echo "FAN - Max"
		ecw $((0x21)) '\x20' # 10 20 30 GPUF: auto max cust
		ecw $((0x22)) '\x08' # 04 08 0c CPUF: auto max cust
	fi
fi

for P in "constraint_*_power_limit_uw" "constraint_*_max_power_uw" "constraint_*_time_window_us"; do
	find /sys/devices/virtual/powercap -type f -iname "$P" -exec bash -c "echo 90000000 | sudo tee  {} &>/dev/null && cat  {} &>/dev/null && echo  {} && cat {}" \;
done

if [[ $* =~ "x" ]]; then
	if [[ $(sudo ls $EC 2>/dev/null) ]]; then
		sudo xxd -g1 $EC
	fi
fi
